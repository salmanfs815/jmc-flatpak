{
    "app-id": "org.openjdk.Jmc",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "arch": "x86_64",
    "default-branch": "master",
    "separate-locales": "false",
    "command": "jmc",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--filesystem=host",
        "--share=network",
        "--socket=system-bus",
        "--env=PATH=/app/jre/bin:/usr/bin"
     ],
    "sdk-extensions" : [ "org.freedesktop.Sdk.Extension.openjdk11" ],
    "modules": [
        {
            "name": "jmc",
            "buildsystem": "simple",
            "build-commands": [
                "install -dm0755 ${FLATPAK_DEST}/jmc",
                "tar xvf org.openjdk.jmc-linux.gtk.x86_64.tar.gz -C ${FLATPAK_DEST}/jmc",
                "rm org.openjdk.jmc-linux.gtk.x86_64.tar.gz",
                "install -dm0755 ${FLATPAK_DEST}/share/icons/hicolor/48x48",
                "mv ${FLATPAK_DEST}/jmc/icon.xpm ${FLATPAK_DEST}/share/icons/hicolor/48x48/org.openjdk.Jmc.xpm",
                "install -dm0755 ${FLATPAK_DEST}/bin",
                "ln -s ${FLATPAK_DEST}/jmc/jmc ${FLATPAK_DEST}/bin/jmc"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.openjdk.jmc-linux.gtk.x86_64.tar.gz"
                },
                {
                    "type": "file",
                    "path": "jmc"
                }
            ]
        },
        {
            "name": "desktop",
            "buildsystem": "simple",
            "build-commands": [
                "install -dm0755 ${FLATPAK_DEST}/share/applications",
                "install -Dm0644 -t ${FLATPAK_DEST}/share/applications org.openjdk.Jmc.desktop"
            ],
            "sources": [
                {
                    "type": "file",
                    "path" : "org.openjdk.Jmc.desktop"
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "install -dm0755 ${FLATPAK_DEST}/share/appdata",
                "install -Dm0644 -t ${FLATPAK_DEST}/share/metainfo org.openjdk.Jmc.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.openjdk.Jmc.appdata.xml"
                }
            ]
        },
        {
            "name" : "openjdk",
            "buildsystem" : "simple",
            "build-commands" : [ "/usr/lib/sdk/openjdk11/install.sh" ]
        }
    ]
}